<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tftbackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/build_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:background="@color/cardview_light_background"
            android:padding="2dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/champ1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/champ8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/build_syns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:background="@color/cardview_light_background"
            android:padding="2dp"
            android:text="Medium Text"
            android:textColor="#4d4d4d" />
    </LinearLayout>


</LinearLayout>